# Enable URL rewriting
RewriteEngine On

# Serve existing files or directories normally
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Otherwise, redirect everything to index.php
RewriteRule ^(.*)$ index.php [L,QSA]

